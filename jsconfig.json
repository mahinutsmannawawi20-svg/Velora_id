{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020",
            "ESNext"
        ],
        "checkJs": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src",
        "vite.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}